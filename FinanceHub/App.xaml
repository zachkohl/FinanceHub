<Application x:Class="FinanceHub.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FinanceHub"
             xmlns:view="clr-namespace:FinanceHub.View"
             xmlns:vm="clr-namespace:FinanceHub.ViewModel"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            
            <DataTemplate DataType="{x:Type vm:AddUserVM}">
                <view:AddUser/>
            </DataTemplate>


            <DataTemplate DataType="{x:Type vm:DataAreaVM}">
                <view:DataAreaView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:InputDataAreaVM}">
                <view:InputDataArea/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:DeleteUserVM}">
                <view:DeleteUser/>
            </DataTemplate>


            <DataTemplate DataType="{x:Type vm:SwitchUserVM}">
                <view:SwitchUser/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:TabAreaVM}">
                <view:TabArea/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:CatagoryManagerVM}">
                <view:CatagoryManagerView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
