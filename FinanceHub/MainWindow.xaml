<Window x:Class="FinanceHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanceHub"
        xmlns:views="clr-namespace:FinanceHub.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Menu>
            <MenuItem Header="_Users">
                <MenuItem Header="Switch User" Click="muSwitchUser_click"/>
                <MenuItem Header="Create User" Click="muCreateUser_click"/>
                <MenuItem Header="Delete User" Click="muDeleteuser_click"/>
                </MenuItem>
        </Menu>
        <Grid>
      
        <TabControl Width="Auto" Name="MyTabControl" Selector.SelectionChanged="OnTabSelectionChanged">
            <TabItem Header="Input">
                <Grid Background="#FFE5E5E5" Name="InputGrid">
                

                </Grid>

            </TabItem>
            <TabItem Header="Data">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
    </StackPanel>
</Window>
