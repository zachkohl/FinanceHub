<UserControl x:Class="FinanceHub.View.InputDataArea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinanceHub.View"
             mc:Ignorable="d" 
             xmlns:vm="clr-namespace:FinanceHub.ViewModel" 
             d:DataContext="{d:DesignInstance Type=vm:InputDataAreaVM, IsDesignTimeCreatable=False}"
             >

    
    <Grid Width="300" Height="400">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Grid.Column="1" Grid.Row="1" Height="50" Width="200"
                Command="{Binding AddTransactionsCommand}">Add Transactions (USAA)</Button>
    </Grid>
</UserControl>
