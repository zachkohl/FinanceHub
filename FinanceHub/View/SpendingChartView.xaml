<UserControl x:Class="FinanceHub.View.SpendingChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinanceHub.View"
             mc:Ignorable="d" 
             xmlns:vm="clr-namespace:FinanceHub.ViewModel" 
             xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
             d:DataContext="{d:DesignInstance Type=vm:SpendingChartVM, IsDesignTimeCreatable=False}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
        <TextBox Name="TitleBox"/>
            <ScottPlot:WpfPlot x:Name="WpfPlot1" Height="200" Width="200"/>
        </StackPanel>
    </Grid>
</UserControl>
