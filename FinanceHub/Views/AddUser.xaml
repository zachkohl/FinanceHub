<UserControl x:Class="FinanceHub.Views.AddUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinanceHub.Views"
              xmlns:master="clr-namespace:FinanceHub"
             mc:Ignorable="d" 
             
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FFE5E5E5">

        <StackPanel>
            <TextBlock Text="Please Add User"/>
            <TextBlock Text="Note: only Letters can be used"/>
            <Label>
            <TextBox Width="200" Name="CandidateName"/>
            </Label>
            <Label>
                <Button Name="Submit" Width="200" Click="OnSubmitCandidateNameClick" ClickMode="Press">Submit</Button>
            </Label>
        </StackPanel>

    </Grid>
</UserControl>
